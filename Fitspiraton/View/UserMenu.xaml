<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:Fitspiraton.ViewModel"
    x:Class="Fitspiraton.View.UserMenu"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.465">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0.018"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.DataContext>
            <ViewModel:UserMenuVm/>
        </Grid.DataContext>

        <StackPanel Grid.Column="0" Background="#FF817D7D">
            <Grid Height="1080">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="257*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Fitspiration" FontSize="48" Margin="50,0,0,0" HorizontalAlignment="Left" Grid.Row="0" FontFamily="Book Antiqua"/>
                <Ellipse Grid.Row="1" Height="200" Width="200" Margin="0,0,200,0">
                    <Ellipse.Fill>
                        <ImageBrush Stretch="UniformToFill" ImageSource="{Binding Image, Mode=TwoWay}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Grid.Row="1" Text="{Binding Name, Mode=TwoWay}" HorizontalAlignment="Right" Margin="0,0,100,0" Height="50" FontSize="32" FontFamily="Book Antiqua"/>
                <TextBlock Grid.Row="1" Text="{Binding Id, Mode=TwoWay}" HorizontalAlignment="Right" Margin="0,100,100,0" Height="50" FontSize="24" FontFamily="Book Antiqua"/>
                <StackPanel Orientation="Vertical"
                            Grid.Row="2">
                    <Button Content="Profile" Height="100" Width="480" Click="ProfileBtn_OnClicked" FontSize="32" FontFamily="Book Antiqua"/>
                    <Button Content="Recent Bookings" Height="100" Width="480" FontSize="32" FontFamily="Book Antiqua" Click="RcentBtn_OnClicked"/>
                    <Button Content="Book" Height="100" Width="480" FontFamily="Book Antiqua" FontSize="32" Click="Button_Click"/>
                    <Button Content="Log out" Height="100" Width="480" FontFamily="Book Antiqua" FontSize="32" Click="BackBtn_OnClicked"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Frame Grid.Column="1"
               Width="1445"
               x:Name="UserMenuFrame"/>
    </Grid>
</Page>
