<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fitspiraton.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:viewModel="using:Fitspiraton.ViewModel"
    x:Class="Fitspiraton.View.ManagerUsersPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <viewModel:AdminPageVM/>
        </Grid.DataContext>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <GridView Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Width="640"
                  ItemsSource="{Binding Members}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
         
            <GridView.Background>
                <SolidColorBrush Color="Gainsboro"/>
            </GridView.Background>
            
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image   Width="150" Height="150" x:Name="Image" Source="{Binding Photo, Mode=TwoWay}" Stretch="UniformToFill" Margin="0,5,0,5" />
                            <StackPanel Margin="10,0,0,0"  Orientation="Vertical">
                                <TextBlock Margin ="0,10,5,0" Text="Name:"/>
                                <TextBlock Text="{Binding Name, Mode=TwoWay}"/>
                                <TextBlock Margin ="0,10,5,0" Text="Id: "/>
                                <TextBlock Text="{Binding Id, Mode=TwoWay}"/>
                                <TextBlock Margin ="0,10,5,0" Text="Password:"/>
                                <TextBlock Text="{Binding Password, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <RelativePanel Grid.Column="2" Grid.Row="1" Margin="20,0,20,0">
            <RelativePanel x:Name="RelativePanelAddDeleteUser" BorderBrush="DarkGray" BorderThickness="1" Width="310" HorizontalAlignment="Center" Margin="0,0,0,10">
                <StackPanel HorizontalAlignment="Center" >
                    <StackPanel Orientation="Horizontal" Height="45" >
                        <Image Source="../Assets/FitspirationDesign/CreateUser.png"  x:Name="CreateUserIcon" RelativePanel.AlignTopWithPanel="True" 
                               Stretch="UniformToFill" Margin="5,5,5,5" />
                        <TextBlock x:Name="AddAUser" Text="Create User" FontSize="30"  Margin="10,0,0,0" />
                    </StackPanel>
                        <TextBlock Text="Name:" FontSize="15" Margin="5,10,0,5"/>
                        <TextBox PlaceholderText="Enter the name of the user" Text="{Binding AddNewMember.Name, Mode=TwoWay}"  
                                     FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="ID:" FontSize="15" Margin="5,5,0,5"/>
                        <TextBox PlaceholderText="Enter the ID of the user" Text="{Binding AddNewMember.Id, Mode=TwoWay}" 
                                     FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="Password:" FontSize="15" Margin="5,5,0,5"/>
                        <TextBox PlaceholderText="Enter the password of the user" Text="{Binding AddNewMember.Password, Mode=TwoWay}" 
                                     FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="Photo:" FontSize="15" Margin="5,5,0,5"/>
                        <TextBox PlaceholderText="Enter a photo of the user" Text="{Binding AddNewMember.Photo, Mode=TwoWay}" 
                                     FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <Button Content="ADD" Command="{Binding AddItemCommand}" 
                                    FontSize="20" Margin="0,10,0,5" Width="180" Height="35" HorizontalAlignment="Center" />
                        <Button Content="DELETE" Command="{Binding DeleteItemCommand}" 
                                    FontSize="20" Margin="0,6,0,10" Width="180" Height="35" HorizontalAlignment="Center" />
                </StackPanel>
            </RelativePanel>

            <RelativePanel x:Name="RelativePanelUpdateUser" Below="RelativePanelAddDeleteUser" BorderBrush="DarkGray" BorderThickness="1" Width="310" HorizontalAlignment="Center" Margin="0,10,0,0">
                <StackPanel HorizontalAlignment="Center">
                   <StackPanel Orientation="Horizontal" Height="45">
                        <Image x:Name="UpdateUserImage" Source="../Assets/FitspirationDesign/Edit User.png" 
                               Stretch="UniformToFill" Margin="5,5,5,5"/>
                        <TextBlock x:Name="UpdateUser" Text="Edit User" FontSize="30" Margin="10,0,0,0"/>
                   </StackPanel>
                        <TextBlock Text="Name:" FontSize="15" Margin="5,10,0,5"/>
                        <TextBox PlaceholderText="Update the name of the user" Text="{Binding SelectedItem.Name, Mode=TwoWay}"  
                                 FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="ID:" FontSize="15" Margin="5,10,0,5"/>
                        <TextBox PlaceholderText="Update the ID of the user" Text="{Binding SelectedItem.Id, Mode=TwoWay}" 
                                 FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="Password:" FontSize="15" Margin="5,10,0,5"/>
                        <TextBox PlaceholderText="Update the password of the user" Text="{Binding SelectedItem.Password, Mode=TwoWay}" 
                                 FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                        <TextBlock Text="Photo:" FontSize="15" Margin="5,10,0,5"/>
                        <TextBox PlaceholderText="Update the photo of the user" Text="{Binding SelectedItem.Photo, Mode=TwoWay}" 
                                 FontSize="18" Margin="5,0,5,0" Width="300" HorizontalAlignment="Center"/>
                    <Button Content="UPDATE" Command="{Binding UpdateItemCommand}" FontSize="20" Margin="0,10,0,10" Width="180" Height="35" HorizontalAlignment="Center"/>
                </StackPanel>
            </RelativePanel>
        </RelativePanel>
    </Grid>
</Page>
